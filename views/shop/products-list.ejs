<!DOCTYPE html>
<html lang="en">
    <% include ../layouts/head %>
    <body>
        <% include ../layouts/header %>

        <main>
            <% if (products.length > 0) { %>
                <div class="w3-row">
                    <% for (let product of products) { %>
                        <div class="w3-col l3 m6 s12">
                            <div class="w3-card w3-aqua">
                                <div class="w3-container w3-center">
                                    <h3><%= product.title %></h3>
                                    <img src="<%= product.image %>" alt="Product Image" style="width: 80%">
                                    <h5><%= product.description %></h5>

                                    <div class="w3-section">
                                        <button class="w3-button w3-green">Add to cart</button>
                                        <button class="w3-button w3-blue">Detail</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <p class="w3-center w-3-xxlarge">No Product</p>
            <% } %>
        </main>
    </body>
</html>
